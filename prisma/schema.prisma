// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Event {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  fingerprint       String
  user_id           String
  created_at        DateTime
}

model Pageview {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  fingerprint       String
  user_id            String?
  url               String
  referrer_url       String?
  created_at         DateTime
  channel           ChannelEnum
  utm_source         String?
  utm_medium         String?
  utm_campaign       String?
  utm_content        String?
}

enum ChannelEnum {
  paid
  organic
  direct
}

